<h2>New Planet</h2>

<form action="<%= planets_path %>" method="post">
  <label>
    Name
    <input type="text" name="name" placeholder="Venus" required>
  </label>

  <label>
    Image
    <input type="url" name="image">
  </label>

  <label>
    Orbit
    <input type="number" name="orbit">
  </label>

  <label>
    Diameter
    <input type="number" name="diameter">
  </label>

  <label>
    Mass
    <input type="number" name="mass">
  </label>

  <label>
    Moons
    <input type="number" name="moons">
  </label>

  <button>Build Planet</button>
</form>
