<h2>Rails Text Helpers</h2>

<ul>
  <% @numbers.each do |n| %>
    <li style="background-color: <%= cycle 'forestgreen', 'white' %>"><%= n %></li>
  <% end %>
</ul>

<p title="<%= @story %>"><%= truncate @story, :length => 40 %></p>

<p><%= pluralize @friend_count, 'friend'%>.</p>
<p><%= pluralize @enemy_count, 'enemy'%>.</p>
