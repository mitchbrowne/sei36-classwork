<h1>All Artists</h1>

<div class="div_wrapper">
  <% @artists.each do |artist| %>

    <div class="artist_wrapper">
      <%= image_tag artist.image, :class => 'thumb' if artist.image.present? %>

      <ul>
        <li>Name: <%= link_to artist.name, artist_path(artist) %></li>
        <li>Nationality: <%= artist.nationality %></li>
        <li>Date of Birth: <%= artist.dob.strftime '%B %e, %Y' if artist.dob.present? %></li>
        <li>Period: <%= artist.period %></li>
      </ul>
    </div>
  <% end %>
</div>
